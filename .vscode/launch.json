  "version": "0.2.0",
  "configurations": [
    {
      "name": "PSP-GDB",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/target/mipsel-sony-psp/debug/game_psp",
      "miDebuggerServerAddress": "localhost:10001",
